// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

// See also:
// https://www.prisma.io/docs/guides/database/using-prisma-with-mongodb
// https://www.prisma.io/docs/concepts/components/prisma-client/composite-types

model Outlet {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  street        String
  houseNumber   String
  city          String
  zipCode       String
  category      String
  latitude      String
  longitude     String
  openingHours  OpeningHour[]
  sunlightHours SunlightHour[]
}

type OpeningHour {
  id            String
  weekday       String
  openAt        String
  closesAt      String
}

type SunlightHour {
  id            String
  yearPeriod    YearPeriod
  outletSunlightHours OutletSunlightHour[]
}

type YearPeriod {
  id          String
  startDate   String
  endDate     String
}

type OutletSunlightHour {
  id          String
  startTime   String
  endTime     String
  sunShine    Int
}